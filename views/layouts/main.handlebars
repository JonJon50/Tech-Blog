<body>
  <div class="flex-column justify-space-around ">
    <header class="display-flex justify-space-between align-center p-4 custom-bg">
      <h1 >
        <i class="fa-solid fa-blog ml-4 text-light"></i>
        <a href="/" class="text-dark">Tech Blog</a>
      </h1>
      {{!-- nav section --}}
      <nav>
     {{!-- if the user is logged in display a logout option else have a login button --}}
        {{#if loggedIn}}
        <a href="/" class="text-light">home page</a> |
        <a href="/dashboard" class="text-light">dashboard</a> |
        <button class="no-button mr-4 text-light" id="logout">logout</button>
        {{else}}
        <a class="mr-4 text-dark" href="/login">login</a>
        {{/if}}
      </nav>
    </header>
    <main class="container form-style container-fluid mt-5"
      {{{ body }}}
    </main>
    <footer>
    </footer>
  </div>
</body>
